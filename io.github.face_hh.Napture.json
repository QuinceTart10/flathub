{
    "app-id": "io.github.face_hh.Napture",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "napture",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "build-options": {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/napture/napture/cargo"
        }
    },
    "modules": [
        "shared-modules/lua5.4/lua-5.4.json",
        {
            "name": "napture",
            "buildsystem": "simple",
            "subdir": "napture",
            "build-commands": [
                "ln -s ../napture /run/build/napture/napture/napture",
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 ./target/release/webx /app/bin/napture",
                "install -Dm644 ./${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 ./${FLATPAK_ID}.desktop -t /app/share/applications/",
                "install -Dm644 ./${FLATPAK_ID}.svg -t /app/share/icons/hicolor/scalable/apps/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/face-hh/webx.git",
                    "tag": "v1.1.1",
                    "commit": "2401c15630b0801f748f90c55daedc6e981c82fc"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
