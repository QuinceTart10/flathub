{
    "app-id": "io.github.face_hh.Napture",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "napture",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "build-options": {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/napture/napture/cargo"
        }
    },
    "modules": [
        {
            "name": "lua",
            "buildsystem": "simple",
            "build-commands": [
                "make all install",
                "install -Dm644 lua.pc /app/lib/pkgconfig/lua.pc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.lua.org/ftp/lua-5.4.6.tar.gz",
                    "sha256": "7d5ea1b9cb6aa0b59ca3dde1c6adcb57ef83a1ba8e5432c0ecd06bf439b3ad88"
                },
                {
                    "type": "shell",
                    "commands": [ "sed -i 's|/usr/local|/app|' ./Makefile" ]
                },
                {
                    "type": "file",
                    "path": "lua.pc"
                }
            ]
        },
        {
            "name": "napture",
            "buildsystem": "simple",
            "subdir": "napture",
            "build-commands": [
                "ln -s ../napture /run/build/napture/napture/napture",
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 ./target/release/webx /app/bin/napture",
                "install -Dm644 ./${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 ./${FLATPAK_ID}.desktop -t /app/share/applications/",
                "install -Dm644 ./${FLATPAK_ID}.svg -t /app/share/icons/hicolor/scalable/apps/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/face-hh/webx.git",
                    "tag": "v1.1.0",
                    "commit": "a78046a8837862406881193cd22c60072f8372a2"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
